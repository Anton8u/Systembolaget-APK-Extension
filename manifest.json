{
  "manifest_version": 3,
  "name": "Systembolaget APK-extension",
  "version": "1.0",
  "description": "Adds APK unit to Systembolaget",
  "permissions": ["storage", "activeTab", "webNavigation", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.systembolaget.se/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.systembolaget.se/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
